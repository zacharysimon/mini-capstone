

<div class = "index container">

  <div class = "container">
    <a href="/products?input_sort=price&input_sort_order=asc"><button type="button" class="btn" aria-label="Right Align"><span class="glyphicon glyphicon-sort-by-order" aria-hidden="true"></span></span></button>
    </a>
    <a href="/products?input_sort=price&input_sort_order=desc"><button type="button" class="btn" aria-label="Right Align"><span class="glyphicon glyphicon-sort" aria-hidden="true"></span></span></button>
    </a>
  </div>

  <div class = "row">
    <% @products.each do |product| %>
      <div class="media col-md-6">
        <div class = "well">
        <div class="media-left media-middle">
          <a href = "/products/<%= product.id %>" >
            <img class="media-object img-rounded" src = <%= product.images.first.url %> alt= <%= product.name%> >
          </a>
        </div>
        <div class="media-body index">
          <div class = "row">
            <div class = "col-xs-8">
              <h4 class="media-heading"><a href ="/products/<%= product.id %>"> <%= product.name %> </a></h4>
            </div>
            <div class = "col-xs-4">
              <h5 class="media price"> $<%= product.price %> </h5>
            </div>
          </div>
          <p> <%= product.description %> </p>
        </div>
        </div>
      </div>
    <% end %>
  </div>
</div>